{{#each children as |child|~}}
    {{#if bold }}
        <b>
    {{/if}}
    {{#if italic }}
        <em>
    {{/if}}
    {{#if underline }}
        <u>
    {{/if}}
    {{ child.text }}
    {{#if underline }}
        </u>
    {{/if}}
    {{#if italic }}
        </em>
    {{/if}}
    {{#if bold }}
        </b>
    {{/if}}
{{/each}}